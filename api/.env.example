# AI Provider Configuration
# Choose between 'claude' or 'ollama'
AI_PROVIDER=claude

# Claude Configuration (required if AI_PROVIDER=claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Ollama Configuration (required if AI_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434 # Adjust if Ollama is running on a different host/port
OLLAMA_MODEL=mistral-small # Name of the Ollama model to use, make sure you have it downloaded

# Server Configuration
PORT=8080

# Prompt Configuration
# Name of the system prompt file (without .md extension) from api/prompts/ directory
SYSTEM_PROMPT=default
# Assistant name variable used in system prompts. This is for demonstration and can be customized or removed if it does not fit your use case.
ASSISTANT_NAME=AI Assistant
